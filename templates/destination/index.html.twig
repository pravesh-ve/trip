{% extends 'base.html.twig' %}

{% block title %}Destination List{% endblock %}

{% block body %}
    <h1>Destination List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Duration</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.name }}</td>
                <td>{{ destination.description }}</td>
                <td>{{ destination.price }}</td>
                <td>{{ destination.duration }}</td>
                <td><img src="{{ asset('uploads/images/' ~ destination.image) }}" alt="{{ destination.name }}" style="width:80px; height:60px; "></td>
                <td>
                    <a href="{{ path('app_destination_show', {'id': destination.id}) }}">show</a>
                    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_destination_new') }}">Create new</a>
{% endblock %}
